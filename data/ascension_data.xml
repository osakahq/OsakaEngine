	<!-- Types of loadings -->
	<!-- always-load-unload in asset property bypasses all types of loading meaning that it will ALWAYS unload/load like a heavy video -->
	<!--  . FULL_LOAD_STARTUP: 			Loads everything from the start. No unload -->
	<!--  . SMARTLOAD_PARCIAL_NOUNLOAD: Loads the current scene, and obeys the always-load parameter. No unload. -->
	<!--  . SMARTLOAD_FULL_NOUNLOAD 	Loads the current scene, and loads all the related scenes (ignores always-load). No unload -->
	<!--  . SMARTLOAD 					Obeys the related scene parameters and unloads according to those parameters. -->
	<asset-map loading="SMARTLOAD_PARCIAL_NOUNLOAD">
		<!-- This is not exactly necessary but it allows fine unloading tunning -->
		<init-load>
			<asset id="texturemap_common" />
			<asset id="s_cursor_move" />
			<asset id="s_cursor_cancel" />
		</init-load>
		<scenes>
			<scene id="startmenu">
				<assets>
					<asset id="texturemap_cinematics" />
					<asset id="s_startmenu" />
				</assets>
				<related-scenes>
					<scene id="loadgame" always-load="true" when-switch-unload-self="false" />
					<scene id="options" always-load="true" when-switch-unload-self="false" />

					<scene id="credits" always-load="true" when-switch-unload-self="false" />
					<!-- new game -->
					<scene id="playback_intro" always-load="false" when-switch-unload-self="true" />
				</related-scenes>
			</scene>
			<scene id="loadgame">
				<!-- Since it has no related scenes rule, when it changes itself to another scene if that scene has -->
				<!-- loadgame scene, then it won't be unloaded, otherwise it will be unloaded. -->
				<assets>
					<asset id="s_startmenu" />
				</assets>
				<!-- There is no related scene logically, because the initiators are startmenu and world/instance -->
				<!-- And because of that, there is no need to worry about loading other scenes. -->
				<!-- Also, normally these type of screens have unload-self="false" in parent (see "startmenu")-->
			</scene>
			<scene id="options">
				<assets>
					<!-- <asset id="s_startmenu" /> !-->
				</assets>
				<!-- Same explanation as in "loadgame" -->
			</scene>
			<scene id="credits">
				<assets>
					<asset id="texturemap_cinematics" />
				</assets>
				<!-- Same explanation as in "loadgame"  -->
			</scene>
			<scene id="playback_intro">
				<assets>
					<asset id="video_intro" always-load-unload="true" />
					<asset id="texturemap_cinematics" />
				</assets>
				<related-scenes>
					<scene id="instance_town1" always-load="true" when-switch-unload-self="true" />
				</related-scenes>
			</scene>
			<scene id="instance_town1">
				<assets>
					<!-- <asset id="texturemap_cinematics" /> -->
				</assets>
				<related-scenes>
					<scene id="world_earth" always-load="false" when-switch-unload-self="false" />
					<scene id="battle_town1" always-load="true" when-switch-unload-self="false" />
				</related-scenes>
			</scene>
			<scene id="battle_town1">
				<assets>
					<asset id="texturemap_cinematics" />
				</assets>
			</scene>
			<scene id="world_earth">
				<assets>
					<!-- <asset id="texturemap_cinematics" /> -->
				</assets>
				<related-scenes>
					<!-- It is by pure logic that instance_town1 has unload-self=false -->
					<!-- Since this is not an intensive graphics game, it is fine to leave world_earth loaded -->
					<!--  . when player is in instance_town1, OTHERWISE... -->
					<!--  . If it is an intensive graphic game then it should always be unloaded -->
					<scene id="instance_town1" always-load="false" when-switch-unload-self="false" />
					<scene id="battle_world1" always-load="true" when-switch-unload-self="false" />
				</related-scenes>
			</scene>
		</scenes>
	</asset-map>

